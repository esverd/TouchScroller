<Window x:Class="TouchScroller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchScroller"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnLeft" Content="Button" HorizontalAlignment="Left" Height="38" Margin="16,54,0,0" VerticalAlignment="Top" Width="86" Click="btnLeft_Click"/>
        <Button x:Name="btnRight" Content="Button" HorizontalAlignment="Left" Height="37" Margin="124,55,0,0" VerticalAlignment="Top" Width="86" Click="btnRight_Click"/>
        <ScrollBar HorizontalAlignment="Left" Height="211" Margin="315,136,0,0" VerticalAlignment="Top" Width="37"/>
        <Rectangle x:Name="rectScrollbar" HorizontalAlignment="Left" Height="211" Margin="16,154,0,0" Stroke="Black" VerticalAlignment="Top" Width="54" MouseDown="rectScrollbar_MouseDown" MouseEnter="rectScrollbar_MouseEnter" MouseMove="rectScrollbar_MouseMove"/>
        <Button x:Name="btnMid" Content="Button" HorizontalAlignment="Left" Height="37" Margin="16,104,0,0" VerticalAlignment="Top" Width="194" Click="btnMid_Click"/>
        <GridSplitter x:Name="gridSplittScroller" HorizontalAlignment="Left" Height="211" Margin="167,154,0,0" VerticalAlignment="Top" Width="43" DragStarted="gridSplittScroller_DragStarted" DragCompleted="gridSplittScroller_DragCompleted" DragDelta="gridSplittScroller_DragDelta"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="59" Margin="385,122,0,0" VerticalAlignment="Top" Width="53"/>

    </Grid>
</Window>
